{
  "name": "@eduardoac/api-clients-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo with API client template and CLI for Orval-based generation.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace @eduardoac/api-client-template && npm run build --workspace @eduardoac/generate-api-client",
    "build:template": "npm run build --workspace @eduardoac/api-client-template",
    "build:cli": "npm run build --workspace @eduardoac/api-client-template && npm run build --workspace @eduardoac/generate-api-client",
    "clean": "node scripts/clean.mjs",
    "format": "prettier --write \"{packages,samples}/**/*.{ts,tsx,js,json,md}\"",
    "lint": "eslint \"packages/**/*.{ts,tsx,js}\"",
    "npm-publish": "npm run npm-publish --workspaces",
    "test": "npm run test --workspace @eduardoac/api-client-template && npm run test --workspace @eduardoac/generate-api-client",
    "typecheck": "tsc -p packages/api-client-template/tsconfig.json --noEmit && tsc -p packages/generate-api-client/tsconfig.json --noEmit",
    "publish:template:npm": "npm run publish:npm --workspace @eduardoac/api-client-template",
    "publish:template:github": "npm run publish:github --workspace @eduardoac/api-client-template",
    "publish:cli:npm": "npm run publish:npm --workspace @eduardoac/generate-api-client",
    "publish:cli:github": "npm run publish:github --workspace @eduardoac/generate-api-client",
    "publish:template:npm-public": "npm run publish:npm-public --workspace @eduardoac/api-client-template",
    "publish:cli:npm-public": "npm run publish:npm-public --workspace @eduardoac/generate-api-client"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
