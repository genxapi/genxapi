{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/genxapi/genxapi/main/schemas/genxapi.schema.json",
  "title": "GenxAPI CLI Configuration",
  "type": "object",
  "required": ["project", "clients"],
  "properties": {
    "$schema": { "type": "string" },
    "logLevel": {
      "type": "string",
      "enum": ["silent", "error", "warn", "info", "debug"],
      "default": "info"
    },
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "directory": { "type": "string", "default": "./" },
        "packageManager": {
          "type": "string",
          "enum": ["npm", "pnpm", "yarn", "bun"],
          "default": "npm"
        },
        "template": { "type": "string", "default": "orval" },
        "templateOptions": {
          "type": "object",
          "properties": {
            "variables": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "installDependencies": { "type": "boolean" },
            "path": { "type": "string" }
          },
          "additionalProperties": true,
          "default": {}
        },
        "output": { "type": "string" },
        "config": { "$ref": "#/definitions/generatorOptions" },
        "repository": { "$ref": "#/definitions/repository" },
        "publish": { "$ref": "#/definitions/publish" },
        "readme": { "type": "object", "additionalProperties": true },
        "runGenerate": { "type": "boolean", "default": true }
      },
      "additionalProperties": true
    },
    "clients": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "swagger"],
        "properties": {
          "name": { "type": "string" },
          "swagger": { "type": "string" },
          "output": {
            "type": "object",
            "properties": {
              "workspace": { "type": "string" },
              "target": { "type": "string" },
              "schemas": { "type": "string" }
            },
            "additionalProperties": false,
            "default": {}
          },
          "config": { "$ref": "#/definitions/generatorOptions" },
          "template": { "type": "string" },
          "templateVariables": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    },
    "hooks": {
      "type": "object",
      "properties": {
        "beforeGenerate": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "afterGenerate": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      },
      "additionalProperties": true,
      "default": {}
    }
  },
  "definitions": {
    "generatorOptions": {
      "type": "object",
      "properties": {
        "httpClient": {
          "type": "string",
          "enum": ["axios", "fetch"]
        },
        "client": {
          "type": "string",
          "enum": [
            "axios",
            "axios-functions",
            "angular",
            "react-query",
            "swr",
            "vue-query",
            "svelte-query",
            "zod",
            "fetch"
          ]
        },
        "mode": {
          "type": "string",
          "enum": ["single", "split", "split-tag", "split-tags", "tags", "tags-split"]
        },
        "baseUrl": { "type": "string" },
        "prettier": { "type": "boolean" },
        "clean": { "type": "boolean" },
        "mock": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["msw", "off"],
                  "default": "msw"
                },
                "delay": { "type": "integer", "minimum": 0 },
                "useExamples": { "type": "boolean" }
              },
              "additionalProperties": true
            }
          ]
        },
        "plugins": {
          "$ref": "#/definitions/pluginOptions"
        },
        "kubb": {
          "$ref": "#/definitions/pluginOptions"
        }
      },
      "additionalProperties": true,
      "default": {}
    },
    "pluginOptions": {
      "type": "object",
      "properties": {
        "client": {
          "type": "object",
          "additionalProperties": true
        },
        "ts": {
          "type": "object",
          "additionalProperties": true
        },
        "oas": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true,
      "default": {}
    },
    "repository": {
      "type": "object",
      "required": ["owner", "name"],
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["github"],
          "default": "github"
        },
        "owner": { "type": "string" },
        "name": { "type": "string" },
        "defaultBranch": { "type": "string", "default": "main" },
        "create": { "type": "boolean", "default": true },
        "commitMessage": {
          "type": "string",
          "default": "chore: update generated client"
        },
        "tokenEnv": { "type": "string", "default": "GITHUB_TOKEN" },
        "pullRequest": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "title": {
              "type": "string",
              "default": "chore: update generated client"
            },
            "body": {
              "type": "string",
              "default": "This pull request was generated automatically and updates the generated API client."
            },
            "branchPrefix": {
              "type": "string",
              "default": "update/generated-client"
            }
          },
          "additionalProperties": true,
          "default": {}
        }
      },
      "additionalProperties": true
    },
    "publish": {
      "type": "object",
      "properties": {
        "npm": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "tag": { "type": "string", "default": "latest" },
            "access": {
              "type": "string",
              "enum": ["public", "restricted"],
              "default": "public"
            },
            "dryRun": { "type": "boolean", "default": false },
            "tokenEnv": { "type": "string", "default": "NPM_TOKEN" },
            "registry": { "type": "string" },
            "command": {
              "type": "string",
              "enum": ["npm", "pnpm", "yarn", "bun"],
              "default": "npm"
            }
          },
          "additionalProperties": true,
          "default": {}
        }
      },
      "additionalProperties": true,
      "default": {}
    }
  }
}
