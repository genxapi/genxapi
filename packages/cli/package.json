{
  "name": "@genxapi/cli",
  "version": "0.1.9",
  "description": "GenxAPI CLI — Automate, orchestrate, and publish SDKs — faster.",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "bin": {
    "genxapi": "./dist/cli.js",
    "cli": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genxapi/genxapi.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "schemas"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.ts'",
    "prebuild": "npm run clean",
    "postbuild": "node -e \"const fs=require('node:fs'); const targets=['dist/cli.js','dist/index.js']; for (const target of targets) { if (fs.existsSync(target)) fs.chmodSync(target, 0o755); }\"",
    "prepack": "npm run build && npm run smoke:cli",
    "smoke:cli": "node dist/cli.js --help",
    "test": "vitest run"
  },
  "dependencies": {
    "@genxapi/template-kubb": "0.1.0",
    "@genxapi/template-orval": "0.1.0",
    "@stricli/core": "^1.2.4",
    "chalk": "^5.3.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.3.0",
    "fs-extra": "^11.2.0",
    "merge-deep": "^3.0.3",
    "octokit": "^4.0.0",
    "ora": "^8.0.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.0.0",
    "@types/yaml": "^1.9.7",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.13.0",
    "rimraf": "^5.0.10",
    "rollup": "^4.34.0",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
