{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/eduardoac/api-clients/main/schemas/generate-api-client.schema.json",
  "title": "Generate API Client Configuration",
  "type": "object",
  "required": ["project", "clients"],
  "properties": {
    "logLevel": {
      "type": "string",
      "enum": ["silent", "error", "warn", "info", "debug"],
      "default": "info"
    },
    "project": {
      "type": "object",
      "required": ["name", "directory"],
      "properties": {
        "name": { "type": "string" },
        "directory": { "type": "string" },
        "packageManager": {
          "type": "string",
          "enum": ["npm", "pnpm", "yarn", "bun"],
          "default": "npm"
        },
        "runGenerate": { "type": "boolean", "default": true },
        "template": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "path": { "type": "string" },
            "variables": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "installDependencies": { "type": "boolean", "default": true }
          },
          "default": {}
        },
        "repository": {
          "type": "object",
          "required": ["owner", "name"],
          "properties": {
            "provider": {
              "type": "string",
              "enum": ["github"],
              "default": "github"
            },
            "owner": { "type": "string" },
            "name": { "type": "string" },
            "defaultBranch": { "type": "string", "default": "main" },
            "create": { "type": "boolean", "default": true },
            "commitMessage": {
              "type": "string",
              "default": "chore: update generated client"
            },
            "tokenEnv": { "type": "string", "default": "GITHUB_TOKEN" },
            "pullRequest": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "title": {
                  "type": "string",
                  "default": "chore: update generated client"
                },
                "body": {
                  "type": "string",
                  "default": "This pull request was generated automatically and updates the generated API client."
                },
                "branchPrefix": {
                  "type": "string",
                  "default": "update/generated-client"
                }
              },
              "default": {}
            }
          }
        },
        "publish": {
          "type": "object",
          "properties": {
            "npm": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false },
                "tag": { "type": "string", "default": "latest" },
                "access": {
                  "type": "string",
                  "enum": ["public", "restricted"],
                  "default": "public"
                },
                "dryRun": { "type": "boolean", "default": false },
                "tokenEnv": { "type": "string", "default": "NPM_TOKEN" },
                "registry": { "type": "string" },
                "command": {
                  "type": "string",
                  "enum": ["npm", "pnpm", "yarn", "bun"],
                  "default": "npm"
                }
              },
              "default": {}
            }
          },
          "default": {}
        }
      }
    },
    "clients": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "swagger", "output"],
        "properties": {
          "name": { "type": "string" },
          "swagger": { "type": "string" },
          "copySwagger": { "type": "boolean", "default": true },
          "swaggerCopyTarget": { "type": "string", "default": "swagger-spec.json" },
          "templateVariables": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "default": {}
          },
          "output": {
            "type": "object",
            "properties": {
              "workspace": { "type": "string", "default": "./src" },
              "target": { "type": "string", "default": "./src/client.ts" },
              "schemas": { "type": "string", "default": "model" }
            }
          },
          "orval": {
            "type": "object",
            "properties": {
              "mode": { "type": "string", "default": "split" },
              "client": { "type": "string", "default": "react-query" },
              "baseUrl": { "type": "string", "default": "http://localhost:3000" },
              "mock": { "type": "boolean", "default": true },
              "prettier": { "type": "boolean", "default": true },
              "clean": { "type": "boolean", "default": true }
            },
            "default": {}
          },
          "kubb": {
            "type": "object",
            "additionalProperties": true,
            "default": {}
          }
        }
      }
    },
    "hooks": {
      "type": "object",
      "properties": {
        "beforeGenerate": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "afterGenerate": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      },
      "default": {}
    }
  }
}
