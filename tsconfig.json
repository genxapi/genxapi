{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "ES2022",
                            "moduleResolution":  "Node",
                            "outDir":  "./dist",
                            "rootDir":  "./src",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "allowSyntheticDefaultImports":  true
                        },
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "dist",
                    "node_modules"
                ]
}
